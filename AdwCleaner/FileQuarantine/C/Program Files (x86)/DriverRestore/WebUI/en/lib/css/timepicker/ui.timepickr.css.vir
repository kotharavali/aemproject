.ui-timepickr {
    position:absolute;
    width:480px; 
}

.ui-timepickr-row {
    margin:0;
    padding:0;
    margin-top:0; 
    display:none;
    position:relative;
	top:80px;
}

.ui-timepickr-button {
    float:left;
    margin:0;
    padding:0;
    list-style:none;
    list-style-type:none;
}

.ui-timepickr-button span {
    font-size:1.1em;
    padding:8px 6px 4px 8px;
    margin-left:2px;
    text-align:center;
    cursor:pointer;
    display:block;
    text-align:center;
	background-color:white;
	height:20px;


    /* system theme (default) */
    border-width:1px;
    border-style:solid;
    /*border-color:ThreeDLightShadow ThreeDShadow ThreeDShadow ThreeDLightShadow;
    color:ButtonText;
    background:ButtonFace;*/
}

