  <script src="lib/scripts/jquery.min.js" type="text/javascript"></script>
<script src="lib/scripts/html5shiv.js" type="text/javascript"></script>
<script src="lib/scripts/jquery.json-2.4.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="lib/scripts/timepicker/jquery.utils.js"></script>
  <script type="text/javascript" src="lib/scripts/timepicker/jquery.strings.js"></script>
  <script type="text/javascript" src="lib/scripts/timepicker/jquery.ui.all.js"></script>
  <script type="text/javascript" src="lib/scripts/timepicker/ui.timepickr.js"></script>
  <script type="text/javascript" src="lib/scripts/timepicker/jquery.datepick.js"></script>
  <script type="text/javascript" src="lib/scripts/jquery.timeentry.js"></script>
